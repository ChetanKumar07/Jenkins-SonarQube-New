pipeline {
  environment {
    registry = "chetan8123/my_app_container"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/ChetanKumar07/Jenkins-SonarQube-New'
      }
    }
	
    stage('Building image') {
      steps{
        script {
          //dockerImage = docker.build registry + ":$BUILD_NUMBER"
	  dockerImage = docker.build("chetan8123/my_app_container")
        }
      }
    }
    stage('Deploy Image') {
      steps{
         script {
            //docker.withRegistry( '', registryCredential ) {
            //dockerImage.push()
	    def buildRegistry = [ url: 'https://registry-1.docker.io/v2/', credentialsId: 'dockerhub' ]
	    withDockerRegistry(registry: buildRegistry ){
	    echo "Pushed Docker Build to DockerHub"
          }
        }
      }
    }

  }
}
