pipeline {
  environment {
    registry = "chetan8123/my_app_container"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/ChetanKumar07/Jenkins-SonarQube-New'
      }
    }
	
    stage('Building image') {
      steps{
        script {
          //dockerImage = docker.build registry + ":$BUILD_NUMBER"
	  dockerImage = docker.build("chetan8123/my_app_container")
        }
      }
    }
    stage('Deploy Image') {
      steps{
         script {
            //docker.withRegistry( '', registryCredential ) {
            withDockerRegistry(credentialsId: 'dockerhub1', url: 'https://index.docker.io/v1/'){
	    dockerImage.push()
          }
        }
      }
    }

  }
}
