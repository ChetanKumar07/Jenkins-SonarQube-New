pipeline {
  environment {
    registry = "chetan8123/my_app_container"
    registryCredential = 'dockerhub'
    dockerimage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/ChetanKumar07/Jenkins-SonarQube-New'
      }
    }
	
    stage('Building image') {
      steps{
        script {
          //dockerImage = docker.build registry + ":$BUILD_NUMBER"
	  docker.build("my_app_container")
        }
      }
    }
	
   stage('Deploy Image') {
	steps{
	 script{
		withCredentials([string(credentialsId: 'dockerhub1', variable: 'DockerHubPwd')]) {
    	bat (/"docker" login -u chetan8123 -p ${DockerHubPwd}/)
		bat (/"docker" tag my_app_container dockerimage:0.1/)
	    bat (/"docker" push dockerimage:0.1/)
      }
	 }
	}
  }

  }
 }
